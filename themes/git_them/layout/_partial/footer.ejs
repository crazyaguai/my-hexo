<%
config.social = config.social || {};
theme.social = theme.social || {};
var github = config.social.github || theme.social.github || '';
var weibo = config.social.weibo || theme.social.weibo || '';
var linkedin = config.social.linkedin || theme.social.linkedin || '';
var location = config.location || theme.location || '';
var url = config.url || '';
var flagcounter_url = config.flagcounter_url || '';
%>
<div class="footer-wrapper container">
    <footer class="footer clearfix">
        <div class="clearfix">
            span
            <a href="<%= config.url %>" class="footer-logo">
                <i class="fa fa-github"></i>
            </a>
            <ul class="footer-social-link">
                <li>© 2019 <%= config.author %></li>
                <li><a href="<%= url %>">Home</a></li>
                <% if(github){ %>
                <li><a href="<%= github %>">Github</a></li>
                <% }if(weibo){ %>
                <li><a href="<%= weibo %>">Weibo</a></li>
                <% }if(linkedin){ %>
                <li><a href="<%= linkedin %>">Linkedin</a></li>
                <% } %>
            </ul>
            <div class="footer-theme-info">
                Theme <a href="//github.com/sabrinaluo/hexo-theme-replica">Replica</a>
                by <a href="//github.com/sabrinaluo">Hiitea</a> ❤ Powered by Hexo
            </div>
        </div>
        <% if(flagcounter_url){ %>
        <div class="footer-pageview">
            <a href="https://info.flagcounter.com/mx4Y">
                <img src="<%= flagcounter_url %>">
            </a>
        </div>
        <% } %>
    </footer>
</div>
