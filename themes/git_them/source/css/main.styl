//分页
.page-nav {
    margin: 10px 0 0;
    padding: 10px 0 10px;
    text-align: center;
    .page-number {
        font-size: 14px;
        display: inline-block;
        position: relative;
        margin: 0 5px;
        width: 28px;
        height: 28px;
        line-height: 28px;
        border 1px solid transparent
        &.current {
            color: #fff;
            background: #ccc;
            border-radius: 14px;
            &:hover {
                color: #fff;
            }
        }
        &:hover {
            cursor pointer;
            color: blue;
            border-radius: 14px;
            border: 1px dashed blue;
        }
    }
    a:hover {
        text-decoration none;
        color: blue;
    }
}

