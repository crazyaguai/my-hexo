            padding-top: 15px
            padding-bottom: 15px
    .user-detail
        border-top: 1px solid #eee
        padding: 16px 0
        list-style: none
        margin: 0
        font-size: 14px
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        vertical-align: top;
        @media (max-width: $screen-sm)
