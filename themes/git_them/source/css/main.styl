    display flex;
    flex-wrap wrap;
}

//nav git图标
.git-icon{
    width: 35px;
    height: 35px;
    border-radius: 50%;
}

//nav 搜索框
.search-input:focus{
    background: #fff;
    color: #000;
    width: 250px;
}

//搜索列表
.search-list-con{
    display none
    width 100%
    position absolute
    background #fff
    border-radius 3px
    border 1px solid #afafaf
    max-height 300px
    overflow auto
    z-index 1
    margin-top 1px
    .search-list-item{
        display block
        line-height 25px
        border-bottom 1px solid #afafaf
        padding 5px 10px
        white-space nowrap
        overflow hidden
        color #000
        font-size 12px
        text-decoration none
        text-overflow ellipsis
        &:hover{
            color blue
        }
        &:last-child{
            border-bottom none
        }
    }
}

